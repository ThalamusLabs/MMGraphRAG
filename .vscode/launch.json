{
	"_comment": "Use this file to configure the graphrag project for debugging. You may create other configuration profiles based on these or select one below to use.",
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Indexer",
			"type": "debugpy",
			"request": "launch",
			"module": "graphrag",
			"args": [
				"index",
				"--root", 
				"/Users/abrandsma/main/personal/MMGraphRAG/christmas",
			],
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/.venv/bin/python",
			"justMyCode": false
		},
		{
			"name": "Query",
			"type": "debugpy",
			"request": "launch",
			"module": "graphrag",
			"args": [
				"query",
				"--root", 
				"<path_to_index_folder>",
				"--method", "basic",
				"--query", "What are the top themes in this story",
			],
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/.venv/bin/python",
			"justMyCode": false
		},
		{
			"name": "Prompt Tuning",
			"type": "debugpy",
			"request": "launch",
			"module": "graphrag",
			"args": [
				"prompt-tune",
				"--config",
				"<path_to_ragtest_root_demo>/settings.yaml",
			],
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/.venv/bin/python",
			"justMyCode": false
		},
		{
			"name": "Debug Integration Pytest",
			"type": "debugpy",
			"request": "launch",
			"module": "pytest",
			"args": [
				"./tests/integration/vector_stores",
				"-k", "test_azure_ai_search"
			],
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/.venv/bin/python",
    		"justMyCode": false 
		},
		{
			"name": "Debug Verbs Pytest",
			"type": "debugpy",
			"request": "launch",
			"module": "pytest",
			"args": [
				"./tests/verbs",
				"-k", "test_generate_text_embeddings"
			],
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/.venv/bin/python",
    		"justMyCode": false 
		},
		{
			"name": "Debug Smoke Pytest",
			"type": "debugpy",
			"request": "launch",
			"module": "pytest",
			"args": [
				"./tests/smoke",
				"-k", "test_fixtures"
			],
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/.venv/bin/python",
    		"justMyCode": false 
		},
		{
			"name": "Debug Current Python File",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/.venv/bin/python",
			"justMyCode": false,
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Indexer (UV Run)",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"graphrag",
				"index",
				"--root", 
				"${workspaceFolder}"
			],
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/.venv/bin/python",
			"justMyCode": false,
			"cwd": "${workspaceFolder}",
			"env": {
				"PYTHONPATH": "${workspaceFolder}"
			}
		}
	]
}